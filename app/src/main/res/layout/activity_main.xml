<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity">
    <!--screen-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="7"
        tools:context=".MainActivity">
        <!--            navigator-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:weightSum="10">

            <Button
                android:layout_width="31dp"
                android:layout_height="match_parent"
                android:background="@drawable/baseline_menu_white_24dp">

            </Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Standard"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:layout_width="31dp"
                android:layout_height="match_parent"
                android:foreground="@drawable/optop">

            </ImageView>

            <Space
                android:layout_width="235dp"
                android:layout_height="match_parent"></Space>

            <ImageView
                android:layout_width="31dp"
                android:layout_height="match_parent"
                android:background="@drawable/baseline_restore_white_24dp">

            </ImageView>
        </LinearLayout>
        <!--        history screen-->
        <TextView
            android:id="@+id/historyCal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="17dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textColor="#AEFFFFFF"
            android:textSize="17sp"
            tools:ignore="RtlCompat">

        </TextView>
        <!--        screen-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="0dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
        <!--        middle navigatior-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:gravity="center"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MC"
                android:textColor="#43FFFFFF"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MR"
                android:textColor="#43FFFFFF"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="M+"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="M_"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MS"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="M‾"
                android:textColor="#43FFFFFF"
                android:textSize="20sp">

            </TextView>

        </LinearLayout>
    </LinearLayout>


    <!--    NUmber-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:weightSum="4"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp"
            android:weightSum="6">

            <Button
                android:id="@+id/percentButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#1A1A1A"
                android:text="%"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#1A1A1A"
                android:text="1/x"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/buttonNegative"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="±"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <Button
                android:id="@+id/buttonDeleteCurrent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#1A1A1A"
                android:text="CE"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#1A1A1A"
                android:text="x^2"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <Button
                android:id="@+id/buttonDeleteAll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#1A1A1A"
                android:text="C"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#1A1A1A"
                android:text="√"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="."
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <Button
                android:id="@+id/buttonDeleteOne"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#1A1A1A"
                android:text="⇍"
                android:textColor="#FFFFFF"
                android:textSize="30sp">

            </Button>

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#1A1A1A"
                android:text="÷"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="normal">

            </Button>

            <Button
                android:id="@+id/buttonMult"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#1A1A1A"
                android:text="×"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="normal">

            </Button>

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#1A1A1A"
                android:text="–"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="normal">

            </Button>

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#1A1A1A"
                android:text="+"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="normal">

            </Button>

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="#404040"
                android:text="="
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="normal">

            </Button>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>


